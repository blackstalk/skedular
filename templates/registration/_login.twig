{% extends "_layout" %}

{% block main %}

	<section class="form">
			<div class="container">
				<div class="center">

					<h1 class="f2 f1-l fw2 white-90 mb0 lh-title">Login</h1>
					<form method="post" accept-charset="UTF-8">
                        {{ csrfInput() }}
                        {{ actionInput('users/login') }}

                        {% if getCookie('lastVisitedSchedule') %}
                            {% set lastVisitedSchedule = getCookie('lastVisitedSchedule') %}
                            {{ redirectInput( 'app/' ~ lastVisitedSchedule ) }}
                        {% endif %}

                        <div class="form-group">
                        {# <h3>
                            <label for="loginName">Username or email</label>
                        </h3> #}
                        <input placeholder="Username or email" id="loginName" type="text" name="loginName" value="{{ craft.app.user.rememberedUsername }}">
                        </div>

                        <div class="form-group">
                        {# <h3>
                            <label for="password">Password</label>
                        </h3> #}
                        <input placeholder="Password" id="password" type="password" name="password">
                        </div>

                        <div class="form-group">
                        <label>
                            <input type="checkbox" name="rememberMe" value="1">
                            Remember me
                        </label>
                        </div>

                        <button type="submit">Login</button>

                        {% if errorMessage is defined %}
                            <p>{{ errorMessage }}</p>
                        {% endif %}
                    </form>

                    <p class="helper">
                        <a href="{{ url('forgotpassword') }}">Forgot your password?</a>
                    </p>
				</div>
			</div>
	</section>

{% endblock %}
